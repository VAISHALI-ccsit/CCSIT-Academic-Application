<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FAEDE9"
        android:elevation="35dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/img_add_bca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground"
                />

            <TextView
                android:id="@+id/edit_notification_bca"
                android:hint="No Notice"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/tmu_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"/>


                <!--<Button
                    android:id="@+id/download_bca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tmu_color"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/tmu_text"
                    />-->



        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>